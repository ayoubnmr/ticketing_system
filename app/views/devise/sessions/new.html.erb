<!-- component -->
<section class="py-26 bg-white">
  <div class="container px-4 mx-auto">
    <div class="max-w-lg mx-auto">
      <div class="text-center mb-8">
        <a class="inline-block mx-auto mb-6" href="#">
          <img src="nigodo-assets/logo-icon-nigodo.svg" alt="">
        </a>
        <h2 class="text-3xl md:text-4xl font-extrabold mb-2">Sign in</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-6">
          <%= f.label :email, class:"block mb-2 font-extrabold" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"inline-block w-full p-4 leading-6 text-lg font-extrabold placeholder-indigo-900 bg-white shadow border-2 border-indigo-900 rounded", type:"emil", placeholder:"email" %>
        </div>
        <div class="mb-6">
          <div class="field">
            <%= f.label :password, class:"block mb-2 font-extrabold", for:"" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"inline-block w-full p-4 leading-6 text-lg font-extrabold placeholder-indigo-900 bg-white shadow border-2 border-indigo-900 rounded", type:"password", placeholder:"**********"%>
          </div>
          <div class="flex flex-wrap -mx-4 mb-6 items-center justify-between bg">
            <div class="w-full lg:w-auto px-4 mb-4 lg:mb-0">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me, class:"ml-1 font-extrabold" %>
                <%= f.label :remember_me %>
              <%end%>
            </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <div class="w-full lg:w-auto px-4">
                <%= link_to "Forgot your password?", new_password_path(resource_name), class:"inline-block font-extrabold hover:underline" %><br />
              <% end %>
            </div>
            <%= f.submit "Log in", class:"inline-block  w-full py-4 px-6 mb-6 text-center text-lg leading-6 text-white font-extrabold bg-indigo-800 hover:bg-indigo-900 border-3 border-indigo-900 shadow rounded transition duration-200"%>
            <p class="text-center font-extrabold">Don&rsquo;t have an account? <%= link_to 'Sign up', new_user_registration_path, class:"text-red-500 hover:underline"%></p>
          </form>
        </div>
      </div>
    </section>
  <% end %>
