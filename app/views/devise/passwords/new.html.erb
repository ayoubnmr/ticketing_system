<section class="py-26 bg-white">
  <div class="container px-4 mx-auto">
    <div class="max-w-lg mx-auto">
      <div class="text-center mb-8">
        <a class="inline-block mx-auto mb-6" href="#">
          <img src="nigodo-assets/logo-icon-nigodo.svg" alt="">
        </a>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <div class="mb-6">
                    <%= f.label :email, class:"block mb-2 font-extrabold" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"inline-block w-full p-4 leading-6 text-lg font-extrabold placeholder-indigo-900 bg-white shadow border-2 border-indigo-900 rounded", type:"emil", placeholder:"email" %>
                </div>
        </div>
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class:"inline-block  w-full py-4 px-6 mb-6 text-center text-lg leading-6 text-white font-extrabold bg-indigo-800 hover:bg-indigo-900 border-3 border-indigo-900 shadow rounded transition duration-200"%>
        </div>
      <% end %>
              <%= link_to "Sign in", new_user_session_path, class:"inline-block font-extrabold hover:underline" %><br/>
              <%= link_to 'Sign up', new_user_registration_path, class:"inline-block font-extrabold hover:underline"%>